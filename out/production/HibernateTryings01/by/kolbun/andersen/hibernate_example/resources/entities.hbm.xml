<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.kolbun.andersen.hibernate_example.entity">
    <class name="Book" table="books" lazy="false">
        <id name="id" column="id" unsaved-value="null">
            <generator class="native"/>
        </id>
        <one-to-one name="info" class="BookInfo"/>
        <property name="title" type="string" column="title" length="255"/>
        <property name="ISBN" type="int"/>
    </class>

    <class name="BookInfo" table="book_info" lazy="false">
        <id name="id" column="id" unsaved-value="null">
            <generator class="foreign">
                <param name="property">book</param>
            </generator>
        </id>
        <one-to-one name="book" class="Book" constrained="true"/>
        <property name="pageCount"/>
        <property name="format" type="string" column="format" length="35"/>
    </class>
</hibernate-mapping>